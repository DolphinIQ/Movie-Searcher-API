<% include partials/header %>

<% include partials/searchBar %>

<div class="container">
	<div class="movie-description">
		<div class="thumbnail" style="font-size: 1.3em;">
			<img alt=<%= movie["Title"] %> src=<%= movie["Poster"] %> >
		</div>
		<h2> <%= movie["Title"] %> </h2>
		<p class="date"> Year: <i> <%= movie["Year"] %> </i> , Released: <i> <%= movie["Released"] %> </i> </p>
		
		<p style="text-indent: 40px; font-size: 1.1em;"> <%= movie["Plot"] %> </p>
		
		<hr style="margin: 40px 0;">
		
		<div class="movie-data">
			<p> IMBD_Rating: <span class="movie-info"> <%= movie["imdbRating"] %> </span> </p>
			<span> Ratings: </span> 
			<ul>
				<% movie["Ratings"].forEach(function(rating){ %>
					<li> <span class="movie-info"> <%= rating["Source"] %>: <%= rating["Value"] %> </span> <li>
				<% }); %> 
			</ul>
			
			<hr style="margin: 30px 0;">
			
			<p> Rated: <span class="movie-info"> <%= movie["Rated"] %> </span> </p>
			<p>Genre: <span class="movie-info"> <%= movie["Genre"] %> </span> </p>
			<p>Runtime: <span class="movie-info"> <%= movie["Runtime"] %> </span> </p>
			<p>Director: <span class="movie-info"> <%= movie["Director"] %> </span> </p>
			<p> Writers: <span class="movie-info"> <%= movie["Writer"] %> </span> </p>
			<p> Actors:  <span class="movie-info"> <%= movie["Actors"] %> </span> </p>
			<p> Language: <span class="movie-info"> <%= movie["Language"] %> </span> </p>
			<p> Country: <span class="movie-info"> <%= movie["Country"] %> </span> </p>
			<p> Awards: <span class="movie-info"> <%= movie["Awards"] %> </span> </p>
			<p> BoxOffice: <span class="movie-info"> <%= movie["BoxOffice"] %> </span> </p>
			<p> Production: <span class="movie-info"> <%= movie["Production"] %> </span> </p>
			<p> Website: <span class="movie-info"> <a href=<%= movie["Website"] %> target="blank"> <%= movie["Website"] %> </a> </span> </p>
			<p> DVD: <span class="movie-info"> <%= movie["DVD"] %> </span> </p>
		</div>
	</div>
</div>


<% include partials/footer %>